<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="First"/>

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_title"
        android:layout_above="@+id/main_view"/>

    <View
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/main_linearlayout"
        android:background="#e5e5e5"/>

    <LinearLayout
        android:id="@+id/main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/main_fill_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/main_fill_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_fill_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:src="@drawable/main_bottom_img_fill_selector"/>

            <TextView
                android:id="@+id/main_fill_txt"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="First"
                android:textColor="@drawable/main_bottom_txt_selector"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_synchronous_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/main_synchronous_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_synchronous_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:src="@drawable/main_bottom_img_synchronous_selector"/>

            <TextView
                android:id="@+id/main_synchronous_txt"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Second"
                android:textColor="@drawable/main_bottom_txt_selector"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_query_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/main_query_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_query_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:src="@drawable/main_bottom_img_query_selector"/>

            <TextView
                android:id="@+id/main_query_txt"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Third"
                android:textColor="@drawable/main_bottom_txt_selector"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_mine_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/main_mine_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/main_mine_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:src="@drawable/main_bottom_img_mine_selector"/>

            <TextView
                android:id="@+id/main_mine_txt"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="Fourth"
                android:textColor="@drawable/main_bottom_txt_selector"
                android:textSize="12sp"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
